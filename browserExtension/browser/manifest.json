{
  "manifest_version": 2,
  "name": "Chat Parser",
  "short_name": "ChPa",
  "version": "1.0.0",
  "description": "Parse chat messages of your online translations",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*",
        "https://ok.ru/*",
        "https://www.youtube.com/*",
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://www.tiktok.com/*",
        "https://allcomments-shkolamm-default-rtdb.firebaseio.com/*",
        "https://vk.com/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "main.js"
  ]
}